generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
enum Role {
  Witness
  Suspect
  Victim
  Informant
}
enum Userrole {
  ADMIN
  INVESTIGATOR
}
model Criminal {
  id             String   @id @default(uuid())
  firstName      String
  lastName       String
  age            Int?
  gender         String?
  cases          Case[]   // This relation connects to the Case model
}

model Case {
  id               String       @id @default(uuid())
  suspectFirstName String
  suspectLastName  String
  officerFirstName String
  officerLastName  String
  caseDescription  String
  location         String
  fileUrl          String?
  updates          CaseUpdate[]
  suspectRole       Role
  criminalId       String       // Foreign key for Criminal
  criminal         Criminal     @relation(fields: [criminalId], references: [id])
  investigatorId   String       // Foreign key for Investigator
  investigator     Investigator @relation(fields: [investigatorId], references: [id])
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
}
model CaseUpdate {
  id          String    @id @default(uuid())
  case       Case      @relation(fields: [caseId], references: [id])
  caseId     String
  updateTime DateTime  @default(now())
  description String
}

model Investigator {
  id            String    @id @default(uuid())
  firstName     String
  lastName      String
  email         String    @unique
  password      String
  role          Userrole     @default(INVESTIGATOR)
  phone         String?
  gender        String?
  age           Int?
  numberOfCases Int       @default(0)
  createdAt     DateTime  @default(now())
  cases         Case[]   
}
